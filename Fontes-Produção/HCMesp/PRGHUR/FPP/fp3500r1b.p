  def var c-arq-conv  as char no-undo.
  assign c-arq-conv = replace(input frame f-pg-imp c-arquivo, "/", CHR(92)).
  SYSTEM-DIALOG GET-FILE c-arq-conv
    /* "*.bmp" "*.jpeg" "*.gif" "*.png" "*.jpg" */
